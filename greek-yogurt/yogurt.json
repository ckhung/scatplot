{
  "source": {
    "csv": "greek-yogurt/yogurt.csv",
    "textcols": ["品名","菌種","添加物"],
    "pkey": "品名"
  },
  "plotly": {
    "layout": {
      "title": "希臘式優格比較： 脂肪、糖、蛋白質 (<a href='https://saving-coupon.com/greek-yogurt-sugar-free/'>資料來源</a>)",
      "shapes": [
	{
	  "type": "shape",
	  "path": "M 0 0 L 1 0 L 0 1 Z",
          "line": {
            "color": "#c00000",
            "width": 2
          }
	}
      ]
    },
    "maintrace": {
      "xaxis": { "expr": "脂肪" },
      "yaxis": { "expr": "糖" },
      "size": { "expr": "sqrt(蛋白質)*30" },
      "maintext": "品名",
      "hovertext": "${品名}<br />${菌種}<br />${添加物}",
      "color": {
        "default": "#ffe"
      }
    }
  }
}
