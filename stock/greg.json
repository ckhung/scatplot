{
  "source": {
    "csv": [
      "stock/greg.csv",
      "stock/divhist.csv",
      "https://frdm.cyut.edu.tw/~ckhung/saas/stock/price.csv"
    ],
    "textcols": [
      "代號",
      "名稱"
    ],
    "pkey": "代號",
    "samplekey": "1301",
    "extracols": [
      "五年均息=(y14+y15+y16+y17+y18)/5",
      "便宜價=五年均息*16",
      "昂貴程度=收盤價/便宜價*100"
    ]
  },
  "plotly": {
    "layout": {
      "title": "股票財報指標圖",
      "xaxis": { "type": "log" },
      "yaxis": { "type": "log" },
      "font": { "size": 16 },
      "shapes": [
	{
	  "type": "line",
	  "x0": 16,
	  "y0": 1,
	  "x1": 80,
	  "y1": 5,
          "line": {
            "color": "#008000",
            "width": 0.8,
            "dash": "dashdot"
          }
	},
	{
	  "type": "line",
	  "x0": 20,
	  "y0": 1,
	  "x1": 100,
	  "y1": 5,
          "line": {
            "color": "#808000",
            "width": 0.8,
            "dash": "dashdot"
          }
	},
	{
	  "type": "line",
	  "x0": 32,
	  "y0": 1,
	  "x1": 160,
	  "y1": 5,
          "line": {
            "color": "#800000",
            "width": 0.8,
            "dash": "dashdot"
          }
	}
      ],
      "annotations": [
        {
          "text": "便宜價",
          "x": 1.9,
          "y": 0.7,
	  "font": {
	    "size": 12,
	    "color": "#008000",
	    "opacity": 0.5
	  },
          "showarrow": false
        },
        {
          "text": "合理價",
          "x": 2.0,
          "y": 0.7,
	  "font": {
	    "size": 12,
	    "color": "#808000",
	    "opacity": 0.5
	  },
          "showarrow": false
        },
        {
          "text": "昂貴價",
          "x": 2.2,
          "y": 0.7,
	  "font": {
	    "size": 12,
	    "color": "#800000",
	    "opacity": 0.5
	  },
          "showarrow": false
        }
      ]
    },
    "maintrace": {
      "font": {
        "size": 16,
        "color": "#008"
      },
      "xaxis": {
        "type": "log",
        "expr": "收盤價"
      },
      "yaxis": {
        "type": "log",
        "expr": "五年均息"
      },
      "size": {
        "expr": "3000/昂貴程度"
      },
      "color": {
        "default": "#008"
      },
      "maintext": "名稱",
      "hovertext": "代號 名稱"
    }
  }
}
