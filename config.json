{
  "csv": "satellites.csv",
  "textcols": ["name", "planet"],
  "keep": "radius > 100",

  "plotly": {
    "title": "太陽系天然衛星軌道常數 (只保留半徑大於 100 公里者)",
    "xaxis": {
      "type": "log",
      "expr": "orbit_major"
    },
    "yaxis": {
      "type": "log",
      "expr": "rev_cycle"
    },
    "size": {
      "expr": "sqrt(radius)"
    },
    "text": "name 繞 planet",
    "color": {
      "default": "#000",
      "column": "planet",
      "palette": {
	"Jupiter": "#4c0",
	"Saturn": "#f00",
	"Uranus": "#40f",
	"Neptune": "#04f"
      }
    },
    "hovermode": "closest"
  }
}
